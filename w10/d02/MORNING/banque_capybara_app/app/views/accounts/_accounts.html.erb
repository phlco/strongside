<div id="accounts">
  <h1>Accounts</h1>
  <table>
    <thead>
      <tr>
        <td>Account Name</td>
        <td>Account Balance</td>
      </tr>
    </thead>
  <% @user.accounts.each do |account| %>
    <tr>
      <td><%= link_to account.name, account_path(account) %></td>
      <td><%= number_to_currency account.balance %></td>
    </tr>
  <% end %>
  </table>
</div>
