<!DOCTYPE html>
<html>
<head>
  <title>Bank</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
  <%= link_to 'home', customer_path %>
  <%= link_to 'logout', logout_path %>
<% else %>
  <%= link_to 'sign_up', new_customer_path %> | <%= link_to 'login', login_path %>
<% end %>
<%= yield %>

</body>
</html>
