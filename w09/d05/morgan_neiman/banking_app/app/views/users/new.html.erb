<div id="sign-up">
<%= flash[:notice] %>
  <h1>Sign Up</h1>
  <%= form_for @user do |f| %>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email %>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign Up" %>

  <% end %>
</div>